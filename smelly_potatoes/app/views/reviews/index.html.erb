<h1>Smelly Potatoes Reviews</h1>
<h2>Create a Review</h2>

<%= form_for @review, remote: true do |f|%>

  <%= f.label :reviewer_name %>
  <%= f.text_field :reviewer_name %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :review_text %>
  <%= f.text_field :review_text %>

  <%= f.collection_select(:movie_id, Movie.all, :id, :name) %>

  <%= f.submit "Create Review" %>
<% end %>

<table border="1" style="width:100%" id='reviews-table'>
  <tr>
    <th>Review ID</th>
    <th>Movie ID</th>
    <th>Reviewer Name</th>
    <th>Review Title</th>
    <th>Review Text</th>
    <th>Review Date</th>
  </tr>
